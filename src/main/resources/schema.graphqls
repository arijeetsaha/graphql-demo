type Post {
    id: ID!
    title: String!
    url: String!
    description: String!
    category: String
    author: Author
}

type Author {
    id: ID!
    name: String!
    posts: [Post]!
}

# Root Query for the application
type Query {
    recentPosts(count: Int, offset: Int) : [Post]!
    authors: [Author]
}

#Mutation
type Mutation {
    writePost(title: String!, text: String!, category: String): Post!
}